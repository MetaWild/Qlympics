# Public domain
QLYMPICS_DOMAIN=play.yourdomain.com
QLYMPICS_EMAIL=ops@yourdomain.com

# Build-time websocket URL for web app
VITE_GAME_WS_URL=wss://play.yourdomain.com

# Managed data services (required)
DATABASE_URL=postgres://user:password@managed-postgres-host:5432/qlympics?sslmode=require
REDIS_URL=rediss://default:password@managed-redis-host:25061

# Quai network
QUAI_RPC_URL=https://orchard.rpc.quai.network
QUAI_TREASURY_RPC_URL=https://orchard.rpc.quai.network/cyprus1
QUAI_CHAIN_ID=15000
QUAI_TREASURY_PRIVATE_KEY=

# API anti-spam
POW_DIFFICULTY=4
POW_EXPIRES_SECONDS=300

# Active game mode seed values (applied on deploy)
GAME_TITLE=Coin Runner
GAME_MAX_PLAYERS=5
GAME_DURATION_SEC=60
GAME_COINS_PER_MATCH=50
GAME_REWARD_POOL_QUAI=50
GAME_STATUS=ACTIVE
GAME_CONFIG_JSON={}

# DB pools
DATABASE_POOL_MAX=20
DATABASE_POOL_IDLE_TIMEOUT_MS=30000
DATABASE_POOL_CONNECTION_TIMEOUT_MS=5000

# Auto payout worker
AUTO_PAYOUT_CONCURRENCY=2
PAYOUT_RPC_TIMEOUT_MS=60000
PAYOUT_SEND_RETRIES=4
PAYOUT_SEND_BACKOFF_MS=500
PAYOUT_GAS_LIMIT=60000
PAYOUT_GAS_PRICE_WEI=1200000000
